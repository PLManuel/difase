---
interface Props {
  name: string
}
const {name} = Astro.props
---
<article class="w-64 h-64 border-2 group border-blue-900 rounded-sm shadow-lg relative overflow-hidden">
  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTT6rpqTWqraDY-3OzIirjJ9GJtnPjBBzCKfQ&s" class="h-full w-full object-cover" alt="">
  <div class="z-50 absolute bg-black/60 text-white -bottom-[6.5rem] transition-all group-hover:bottom-0 p-2">
    <h3 class="mb-2">{name}</h3>
    <p class="text-sm">Lorem ipsum dolor sit amet consectetur adipisicing elit. Fuga, hic!</p>
    <button class="mx-auto block bg-white border-2 border-blue-950 text-blue-900 font-bold px-2 uppercase font-oblivion text-sm tracking-wider">Cotizar</button>
  </div>
</article>