---
interface Props {
  sector: string
}
const {sector} = Astro.props
---
<swiper-slide class="overflow-hidden">
  <article class="relative h-80 overflow-hidden bg-blue-950 group">
    <img
      src=`images/inicio/temp/slide-sector-${sector}.jpg`
      alt=""
      class="absolute top-0 left-1/2 w-[125%] h-full object-cover -translate-x-1/2 skew-x-12 max-w-max saturate-0 group-hover:saturate-100 transition-all duration-300 group-hover:scale-110"
      style="mask-image: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(0, 0, 0, 0.1) 95%);"
    />
    <section class="relative skew-x-12 flex justify-center h-full">
      <div class="h-full w-auto flex -skew-x-12">
        <h3 class="font-oblivion text-lg uppercase tracking-widest mt-auto mb-8">{sector}</h3>
      </div>
    </section>
  </article>
</swiper-slide>