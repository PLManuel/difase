---
import { Icon } from "astro-icon/components"
import Contactanos from "./Contactanos.astro"

interface Props {
  contactanos?: boolean
  servicios?: boolean
}
const { contactanos = "false", servicios = "false" } = Astro.props
---

{!(servicios || contactanos) && <Contactanos />}

<footer class="bg-[#001457] relative text-white">
