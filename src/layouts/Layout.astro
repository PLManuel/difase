---
import { ClientRouter } from "astro:transitions"
import Navbar from "@/components/Navbar.astro"
import WhatsappButton from "@/components/WhatsappButton.astro"
import Footer from "@/components/Footer.astro"

interface Props {
  title: string
  hero?: boolean
  isIndex?: boolean
  isNosotros?: boolean
  isCatalogo?: boolean
  isServicios?: boolean
  isContactanos?: boolean
}

const {
  title,
  hero = false,
  isIndex = false,
  isNosotros = false,
  isCatalogo = false,
  isServicios = false,
  isContactanos = false,
} = Astro.props
const pageTitle = isIndex ? title : `Difase | ${title}`
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />

    <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
    <script src="/pagefind/pagefind-ui.js" is:inline></script>

    <ClientRouter />
  </head>
  <body class="font-quicksand">
    <Navbar
      hero={hero}
      inicio={isIndex}
      nosotros={isNosotros}
      catalogo={isCatalogo}
      servicios={isServicios}
      contactanos={isContactanos}
    />
    <WhatsappButton />
    <main>
      <slot />
    </main>
    <Footer contactanos={isContactanos} />
  </body>
</html>

<style is:global>
  :root {
    --pagefind-ui-scale: 0.8;
    --pagefind-ui-primary: #034ad8;
    --pagefind-ui-text: #393939;
    --pagefind-ui-background: #ffffff;
    --pagefind-ui-border: #eeeeee;
    --pagefind-ui-tag: #eeeeee;
    --pagefind-ui-border-width: 0px;
    --pagefind-ui-border-radius: 0px;
    --pagefind-ui-image-border-radius: 8px;
    --pagefind-ui-image-box-ratio: 3 / 2;
    --pagefind-ui-font: "Quicksand", "system-ui";
  }
  @font-face {
    font-family: "Oblivion";
    font-style: normal;
    font-size: 100 700;
    font-display: swap;
    src: url(/fonts/OblivionFuture.woff2);
  }
  @font-face {
    font-family: "Energy";
    font-style: normal;
    font-size: 100 700;
    src: url(/fonts/LTEnergy-Regular.otf);
  }
  @font-face {
    font-family: "Quicksand";
    src: url(/fonts/Quicksand-VariableFont.ttf);
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }
</style>
