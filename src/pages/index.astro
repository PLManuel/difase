---
import HeroSection from "@/components/HeroSection.astro"
import Layout from "@/layouts/Layout.astro"
import Espacio from "@/assets/Espacio.astro"
---

<Layout
  isIndex
  title="Difase Machinery | Innovando soluciones para la industria | Machinery Design & Innovation"
>
  <h1 class="sr-only">
    Difase Machinery, innovaccion, dise√±o y tecnologia en la industria.
    Proveedores de maquinaria industrial, soldaduras y trabajos varios
  </h1>
  <HeroSection />
  <section class="max-w-screen-xl mx-auto flex mt-5 min-w-0">
    <div class="flex items-center text-center p-3">
      <h2 class="font-oblivion tracking-widest text-3xl leading-relaxed">
        soluciones<br />para cada<br /><strong
          class="border block w-fit px-2 mt-3 -skew-x-12 text-blue-900 mx-auto"
          style="background: linear-gradient(
        45deg,
        #ccc 5%,
        #fff 10%,
        #ccc 30%,
        #ddd 50%,
        #ccc 70%,
        #fff 80%,
        #bbb 95%
      );"
          >sector</strong
        >
      </h2>
    </div>
    <div class="min-w-0 mr-5 ml-3">
      <swiper-container
        class="-skew-x-12"
        slides-per-view="3"
        space-between="10"
        speed="500"
        loop="true"
      >
        <swiper-slide class="overflow-hidden">
          <article
            class="parallelogram-card relative h-80 overflow-hidden bg-blue-950 group"
          >
            <img
              src="https://sinci.com/wp-content/uploads/2022/05/Transformacio%CC%81n-Digital-en-plantas-de-la-industria-Farmace%CC%81utica-1024x536.jpg"
              alt="Fondo"
              class="absolute top-0 left-1/2 w-[125%] h-full object-cover -translate-x-1/2 skew-x-12 max-w-max saturate-0 group-hover:saturate-100 transition-all duration-300 group-hover:scale-110"
              style="mask-image: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(0, 0, 0, 0.1) 95%);"
            />
            <section
              class="relative skew-x-12 text-white flex justify-center h-full"
            >
              <div class="h-full w-auto flex -skew-x-12">
                <h3
                  class="font-oblivion text-xl uppercase tracking-widest mt-auto mb-8"
                >
                  Farmaceutica
                </h3>
              </div>
            </section>
          </article>
        </swiper-slide>
        <swiper-slide class="overflow-hidden">
          <article
            class="parallelogram-card relative h-80 overflow-hidden bg-blue-950 group"
          >
            <img
              src="https://tecnologiaminera.com/imgPosts/1599630952RjeoUp4q.jpg"
              alt="Fondo"
              class="absolute top-0 left-1/2 w-[125%] h-full object-cover -translate-x-1/2 skew-x-12 max-w-max saturate-0 group-hover:saturate-100 transition-all duration-300 group-hover:scale-110"
              style="mask-image: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(0, 0, 0, 0.1) 95%);"
            />
            <section
              class="relative skew-x-12 text-white flex justify-center h-full"
            >
              <div class="h-full w-auto flex -skew-x-12">
                <h3
                  class="font-oblivion text-xl uppercase tracking-widest mt-auto mb-8"
                >
                  Minera
                </h3>
              </div>
            </section>
          </article>
        </swiper-slide>
        <swiper-slide class="overflow-hidden">
          <article
            class="parallelogram-card relative h-80 overflow-hidden bg-blue-950 group"
          >
            <img
              src="https://www.calero-group.com/wp-content/uploads/2020/11/procesos-industria-alimentaria-1024x682.jpg"
              alt="Fondo"
              class="absolute top-0 left-1/2 w-[125%] h-full object-cover -translate-x-1/2 skew-x-12 max-w-max saturate-0 group-hover:saturate-100 transition-all duration-300 group-hover:scale-110"
              style="mask-image: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(0, 0, 0, 0.1) 95%);"
            />
            <section
              class="relative skew-x-12 text-white flex justify-center h-full"
            >
              <div class="h-full w-auto flex -skew-x-12">
                <h3
                  class="font-oblivion text-xl uppercase tracking-widest mt-auto mb-8"
                >
                  Alimentaria
                </h3>
              </div>
            </section>
          </article>
        </swiper-slide>
      </swiper-container>
    </div>
  </section>
  <section class="max-w-screen-xl mx-auto mt-20">
    <h2 class="font-oblivion text-4xl uppercase text-center text-blue-900">
      Nuestros clientes
    </h2>
    <div class="flex justify-between mt-10 flex-wrap gap-x-14 gap-y-8">
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/agrovado-logo.png"
        alt=""
      />
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/bhp-logo.svg"
        alt=""
      />
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/cerroVerde-logo.svg"
        alt=""
      />
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/eriez-logo.png"
        alt=""
      />
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/genco-logo.png"
        alt=""
      />
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/pfizer-logo.svg"
        alt=""
      />
      <img
        class="h-16 saturate-0 hover:saturate-100 transition-all duration-300"
        src="/clients/roxfarma-logo.png"
        alt=""
      />
    </div>
  </section>
  <Espacio />
</Layout>
