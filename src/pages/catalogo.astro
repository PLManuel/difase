            <article class="w-64 h-64 bg-blue-900 p-6 rounded-sm shadow-lg">
            </article>
            <article class="w-64 h-64 bg-blue-900 p-6 rounded-sm shadow-lg">
            </article>
          </div>
        </div>
      </section>
      <section class="">
        <h2
          id="categoria-1"
          class="text-center my-5 uppercase font-oblivion tracking-wider text-2xl text-blue-900"
        >
          Categoria 1
        </h2>
        <div class="flex justify-center">
          <div
            class="grid grid-cols-1 sm:grid-cols-2 min-[57rem]:grid-cols-3 min-[75rem]:grid-cols-4 gap-4"
          >
            <article class="w-64 h-64 bg-blue-900 p-6 rounded-sm shadow-lg">
