---
import ContactForm from "@/components/contactanos/ContactForm.astro"
import Layout from "@/layouts/Layout.astro"
import { Icon } from "astro-icon/components"
export const prerender = false
---

<Layout title="Contactanos" isContactanos>
  <section
    class="mt-44 mx-auto max-w-screen-xl px-8 grid md:grid-cols-2 grid-cols-1 gap-4"
  >
    <div class="">
      <h1
        class="font-energy lg:text-6xl md:text-5xl text-4xl uppercase text-blue-900"
      >
        Contactanos ahora!
      </h1>
      <p class="max-lg:text-sm">
        Estamos aquí para ayudarte con tus proyectos y responder a tus
        preguntas. No dudes en ponerte en contacto con nosotros de la forma que
        prefieras. ¡Estamos listos para asistirte!
      </p>
      <ContactForm />
    </div>
    <div class="bg-slate-200 p-8 text-blue-950">
      <h2
        class="font-energy lg:text-4xl md:text-3xl text-2xl uppercase text-center mb-10 text-blue-900"
      >
        Atención al cliente
      </h2>
      <article
        class="flex gap-5 items-center justify-center px-5 py-3 mb-8"
      >
        <Icon name="contact/mail" class="size-16" />
        <div>
          <h3 class="text-xl font-bold uppercase">Correo</h3>
          <p>mlume@difase.com</p>
        </div>
      </article>
      <article
        class="flex gap-5 items-center justify-center px-5 py-3 mb-8"
      >
        <Icon name="contact/phone" class="size-16" />
        <div>
          <h3 class="text-xl font-bold uppercase">Telefono</h3>
          <p>+51 935 178 423</p>
        </div>
      </article>
      <article
        class="flex gap-5 items-center justify-center px-5 py-3 mb-8"
      >
        <Icon name="contact/location" class="size-16" />
        <div>
          <h3 class="text-xl font-bold uppercase">Ubicación</h3>
          <p>
            Av. Pobladores California<br />Mz H Lote 7<br />Villa el Salvador
          </p>
        </div>
      </article>
      <section>
        <h2
        class="font-energy lg:text-4xl md:text-3xl text-2xl uppercase text-center mb-10 text-blue-900"
      >
        Siguenos!
      </h2>
        <div class="grid md:grid-cols-4 grid-cols-2 gap-x-5 max-md:gap-y-5 mx-auto w-fit">
          <a href="" class="hover:text-blue-900">
            <Icon name="logos/facebook-icon" class="size-12" />
          </a>
          <a href="" class="hover:text-blue-900">
            <Icon name="logos/instagram-icon" class="size-12" />
          </a>
          <a href="" class="hover:text-blue-900">
            <Icon name="logos/x-icon" class="size-12" />
          </a>
          <a href="" class="hover:text-blue-900">
            <Icon name="logos/youtube-icon" class="size-12" />
          </a>
        </div>
      </section>
    </div>
  </section>
  <section class="max-w-screen-2xl mx-auto p-4 mt-5">
    <!-- <iframe
      class="max-w-full w-full h-[30rem]"
      loading="lazy"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3899.622520634565!2d-76.97319472493632!3d-12.20606828804335!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105b9863a1012ef%3A0xf045fe7c450c35fe!2sDifase%20Machinery%20SAC!5e0!3m2!1ses!2spe!4v1737261009063!5m2!1ses!2spe"
      title="Av. Pobladores California Mz H Lote 7, Villa el Salvador"
      aria-label="Av. Pobladores California Mz H Lote 7, Villa el Salvador"
    >
    </iframe> -->
  </section>
</Layout>
